@model RegisterModelView
<div class="container px-5 my-5">
    <form method="post" asp-action="Register" id="contactForm" data-sb-form-api-token="API_TOKEN">

        <div asp-validation-summary="All" class="alert alert-danger d-none"></div>
        <div class="form-floating mb-3">
            <input class="form-control" asp-for="FirstName" />
            <label asp-for="FirstName" asp-for="nationalId"></label>
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>

        <div class="form-floating mb-3">
            <input class="form-control" asp-for="LastName" />
            <label asp-for="LastName"></label>
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>

        <div class="form-floating mb-3">
            <input class="form-control" asp-for="UserName" />
            <label asp-for="UserName"></label>
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>

        <div class="form-floating mb-3">
            <input class="form-control" asp-for="Email" />
            <label asp-for="Email"></label>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="form-floating mb-3">
            <input class="form-control" asp-for="Password" />
            <label asp-for="Password"></label>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <div class="d-none" id="submitErrorMessage">
            <div class="text-center text-danger mb-3">Error sending message!</div>
        </div>
        <div class="d-grid">
            <button class="btn btn-primary btn-lg " id="submitButton" type="submit">Submit</button>
        </div>
    </form>
    @if (TempData["RegisterResult"] != null)
    {
            <div class="alert alert-info">@TempData["LoginResult"]</div>
    }
</div>
@section Scripts
{
        <partial name="_validationScriptsPartial" />
}

<script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
